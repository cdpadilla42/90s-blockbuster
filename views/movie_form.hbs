<h1>{{title}}</h1>

<form action="" method="post">
  <div class="form-group">
    <label for="title">
      Title:
      <input type="text"  placeholder="Name of movie" name="title" required="true" value="{{#if movie.title}}movie.title{{else}}{{/if}}">
    </label>
  </div>
  <div class="form-group">
    <label for="director">
    <select name="director" placeholder="Select Director" required="true">
      {{#each directors}}
        <option value="{{this._id}}">{{this.name}}</option>
      {{/each}}
    </select>
    </label>
  </div>
  <div class="form-group">
    
  </div>
</form>